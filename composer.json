{
	"name"			: "ipub/menu",
	"type"			: "library",
	"description"	: "Extension for Nette Framework to handle site menu items.",
	"keywords"		: ["nette", "widgets", "tools", "menu", "ipub", "ipublikuj"],
	"homepage"		: "https://github.com/iPublikuj/menu",
	"license"		: ["GPL-2.0", "GPL-3.0"],

	"authors": [
		{
			"name"		: "iPublikuj:cms",
			"email"		: "info@ipublikuj.eu",
			"homepage"	: "http://www.ipublikuj.eu/"
		}
	],

	"support": {
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/menu/issues"
	},

	"extra": {
		"ipub"	: {
			"configuration" : {
				"extensions" : {
					"menu" : "IPub\\Menu\\DI\\MenuExtension"
				}
			}
		}
	},

	"require": {
		"php"	: ">=7.0.0",

		"nette/application"	: "~2.3",
		"nette/di"			: "~2.3",
		"nette/utils"		: "~2.3",

		"pds/skeleton"	: "@dev"
	},

	"require-dev": {
		"nette/bootstrap"		: "~2.3",
		"nette/mail"			: "~2.3",
		"nette/robot-loader"	: "~2.3",
		"nette/safe-stream"		: "~2.3",
		"nette/tester"			: "@dev",

		"tracy/tracy"	: "@dev"
	},

	"autoload": {
		"psr-0": {
			"IPub\\Menu\\": "src/"
		}
	}
}
